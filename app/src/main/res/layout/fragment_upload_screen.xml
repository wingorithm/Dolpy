<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".file_part_fragment.uploadScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_subdirectory_arrow_right_24"
            android:paddingHorizontal="24dp"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center|left"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerfiles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingBottom="10dp"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/attachbtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="Docs"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/judul_timeline_biru"
                android:drawableStart="@drawable/ic_baseline_attach_file_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/linkbtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="Link"
                android:clickable="true"
                android:focusable="true"
                android:foregroundGravity="bottom"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/judul_timeline_biru"
                android:drawableStart="@drawable/ic_baseline_insert_link_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/imagebtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="Image"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/judul_timeline_biru"
                android:drawableStart="@drawable/ic_baseline_image_24"
                android:elevation="8dp"
                android:drawablePadding="8dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>